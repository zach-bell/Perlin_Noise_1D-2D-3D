		JSlider tSizeSlider = new JSlider(JSlider.HORIZONTAL, 0, 100, 1);
		JSlider offIncrSlider = new JSlider(JSlider.HORIZONTAL, 0, 100, 1);
		
		accelSlider.addChangeListener(this);
		tSizeSlider.addChangeListener(this);
		offIncrSlider.addChangeListener(this);
	}
	
	
	
